<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.ahadeth.AhadethFragment">

    <ImageView
        android:id="@+id/hadeth_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_basmala"
        android:adjustViewBounds="true"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".25"
        />
    <LinearLayout
        android:id="@+id/Hadeth_name_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/hadeth_logo_iv"
        android:orientation="vertical"
        >
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/gold"
        android:layout_marginTop="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" الاحاديث"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginVertical="12dp"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/gold"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hadeth_name_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Hadeth_name_section"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_hadeth_name"
        />

</androidx.constraintlayout.widget.ConstraintLayout>